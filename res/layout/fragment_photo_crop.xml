<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/photo_crop_fragment">

    <Button
        android:id="@+id/firstImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alphaSeekBar"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_launcher"
        android:onClick="setFirst" />

    <Button
        android:id="@+id/secondImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_launcher"
        android:onClick="setSecond" />

    <SeekBar
        android:id="@+id/alphaSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/firstImageButton"
        android:layout_alignRight="@+id/secondImageButton"
        android:max="255"
        android:progress="127" />

    <com.crazy.contentdoesnotmatter.views.ImageEditView
        android:id="@+id/photoEditView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>